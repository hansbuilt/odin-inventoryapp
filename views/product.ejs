<html>
  <head>
    <link rel="stylesheet" href="/styles/index.css" />
  </head>
  <body>
    <h3>
      <a href="/">Home</a> ->
      <a href="/category/<%= data.category_id %>"><%= data.category_name %></a>
      -> <%= data.product_name %>
    </h3>
    <a href="/product/<%= data.id %>/edit">Edit Product</a>
    <form
      method="POST"
      action="/product/<%= data.id %>/delete"
      onsubmit="return confirm('Delete this product?')"
    >
      <button type="submit">Delete Product</button>
    </form>

    <table>
      <tr>
        <th>Key</th>
        <th>Value</th>
      </tr>
      <% Object.entries(data).forEach(([key, value]) => { %>
      <tr>
        <td><%= key %></td>
        <td><%= value %></td>
      </tr>
      <% }) %>
    </table>
  </body>
</html>
